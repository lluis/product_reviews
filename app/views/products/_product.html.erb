<div id="<%= dom_id product %>">
  <p class="my-5">
  <%= image_tag product.image_url %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= product.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= product.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Rating:</strong>
    <%= pretty_rating product.rating %>
    (<%= pluralize product.reviews.count, 'review' %>)
  </p>

  <% if action_name != "show" && action_name.present? %>
    <%= link_to "Show this product", product, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
